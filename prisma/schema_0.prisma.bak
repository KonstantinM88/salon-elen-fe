generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Article {
  id          String      @id @default(cuid())
  slug        String      @unique
  title       String
  excerpt     String?
  cover       String?
  type        ArticleType @default(NEWS)
  content     String?     @db.Text
  publishedAt DateTime?
  expiresAt   DateTime?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  translations ArticleTranslation[]

  @@index([publishedAt])
  @@index([expiresAt])
}

model ArticleTranslation {
  id        String   @id @default(cuid())
  articleId String
  locale    String   // "ru", "de", "en"
  title     String
  excerpt   String?
  content   String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  article Article @relation(fields: [articleId], references: [id], onDelete: Cascade)

  @@unique([articleId, locale])
  @@index([locale])
  @@index([articleId])
  @@map("article_translations")
}

model Booking {
  id        String   @id @default(cuid())
  name      String
  phone     String
  email     String?
  message   String?
  createdAt DateTime @default(now())
}

model Service {
  id                    String                 @id @default(cuid())
  slug                  String                 @unique
  name                  String                 @map("title")
  priceCents            Int?
  durationMin           Int
  createdAt             DateTime               @default(now())
  updatedAt             DateTime               @updatedAt
  isActive              Boolean                @default(true)
  description           String?
  parentId              String?
  cover                 String?                // Обложка услуги
  /// Мягкое удаление: скрываем из интерфейса,
  /// данные и связи остаются (для истории).
  isArchived            Boolean                @default(false)
  // ✅ ДОБАВИТЬ ЭТУ СТРОКУ:
  translations          ServiceTranslation[]
  gallery               ServiceGallery[]
  appointments          Appointment[]
  promotionItems        PromotionItem[]
  parent                Service?               @relation("ServiceChildren", fields: [parentId], references: [id])
  children              Service[]              @relation("ServiceChildren")
  smsPhoneRegistrations SmsPhoneRegistration[]
  masters               Master[]               @relation("MasterServices")

  @@index([isActive])
  @@index([isArchived])
  @@index([slug])
  @@index([parentId])
  @@map("Service")
}

model ServiceTranslation {
  id          String   @id @default(cuid())
  serviceId   String
  locale      String   // "ru", "de", "en"
  name        String
  description String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  service Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  
  @@unique([serviceId, locale])
  @@index([locale])
  @@index([serviceId])
  @@map("service_translations")
}

model ServiceGallery {
  id        String   @id @default(cuid())
  serviceId String
  image     String   // путь к изображению
  caption   String?  // подпись к фото
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())
  
  service Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  
  @@index([serviceId])
  @@map("service_gallery")
}

model Client {
  id           String          @id @default(cuid())
  name         String
  phone        String          @unique
  email        String          @unique
  birthDate    DateTime
  referral     String?
  notes        String?
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
  userId       String?         @unique
  deletedAt    DateTime?       @db.Timestamp(6)
  deletedBy    String?
  appointments Appointment[]
  user         User?           @relation(fields: [userId], references: [id])
  discount     ClientDiscount?

  @@index([phone])
  @@index([email])
  @@index([deletedAt])
  @@map("Client")
}

model Master {
  id                    String                 @id @default(cuid())
  name                  String
  email                 String                 @unique
  phone                 String                 @unique
  birthDate             DateTime
  bio                   String?
  createdAt             DateTime               @default(now())
  updatedAt             DateTime               @updatedAt
  avatarUrl             String?
  userId                String?                @unique
  appointments          Appointment[]
  user                  User?                  @relation(fields: [userId], references: [id])
  timeOff               MasterTimeOff[]
  workingHours          MasterWorkingHours[]
  smsPhoneRegistrations SmsPhoneRegistration[]
  services              Service[]              @relation("MasterServices")
}

model MasterWorkingHours {
  id           String   @id @default(cuid())
  masterId     String
  /// 0 = Sunday ... 6 = Saturday
  weekday      Int
  startMinutes Int
  endMinutes   Int
  isClosed     Boolean  @default(false)
  createdAt    DateTime @default(now())
  master       Master   @relation(fields: [masterId], references: [id], onDelete: Cascade)

  @@unique([masterId, weekday])
}

model MasterTimeOff {
  id           String   @id @default(cuid())
  masterId     String
  /// Дата (обычно полночь локальной TZ) + интервал
  date         DateTime
  startMinutes Int
  endMinutes   Int
  reason       String?
  createdAt    DateTime @default(now())
  master       Master   @relation(fields: [masterId], references: [id], onDelete: Cascade)

  @@index([masterId, date])
}

model Appointment {
  id                   String                 @id @default(cuid())
  serviceId            String
  startAt              DateTime
  endAt                DateTime
  customerName         String
  phone                String
  email                String?
  notes                String?
  /// Язык клиента при бронировании (для email/sms уведомлений): "de", "ru", "en"
  locale               String?                @default("de")
  status               AppointmentStatus      @default(PENDING)
  createdAt            DateTime               @default(now())
  clientId             String?
  /// Связь с мастером (optional — для обратной совместимости)
  masterId             String?
  birthDate            DateTime?
  referral             String?
  paymentStatus        PaymentStatus          @default(PENDING)
  deletedAt            DateTime?              @db.Timestamp(6)
  deletedBy            String?
  client               Client?                @relation(fields: [clientId], references: [id])
  master               Master?                @relation(fields: [masterId], references: [id])
  service              Service                @relation(fields: [serviceId], references: [id])
  smsPhoneRegistration SmsPhoneRegistration?
  telegramVerification TelegramVerification?
  statusLogs           AppointmentStatusLog[]

  @@index([masterId])
  @@index([serviceId])
  @@index([status])
  @@index([clientId])
  @@index([startAt, endAt])
  @@index([masterId, startAt])
  @@index([birthDate])
  @@index([paymentStatus])
  @@index([deletedAt])
  @@index([masterId, startAt], map: "appointment_master_time_idx")
  @@map("Appointment")
}

model WorkingHours {
  id           String   @id @default(cuid())
  weekday      Int      @unique
  startMinutes Int
  endMinutes   Int
  isClosed     Boolean  @default(false)
  createdAt    DateTime @default(now())
}

model TimeOff {
  id           String   @id @default(cuid())
  date         DateTime
  startMinutes Int
  endMinutes   Int
  reason       String?
  createdAt    DateTime @default(now())

  @@index([date])
}

model User {
  id           String    @id @default(cuid())
  name         String?
  email        String    @unique
  phone        String?
  image        String?
  role         Role      @default(USER)
  passwordHash String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  accounts     Account[]
  client       Client?
  master       Master?
  sessions     Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model OrphanedUser {
  id           String   @id @default(cuid())
  email        String   @unique
  role         Role
  name         String?
  sourceUserId String?
  archivedAt   DateTime @default(now())

  @@index([archivedAt])
}

model Promotion {
  id        String          @id @default(cuid())
  title     String
  percent   Int
  from      DateTime
  to        DateTime
  isGlobal  Boolean         @default(false)
  createdAt DateTime        @default(now())
  items     PromotionItem[]

  @@index([from])
  @@index([to])
  @@index([isGlobal])
}

model PromotionItem {
  id          String    @id @default(cuid())
  promotionId String
  serviceId   String
  promotion   Promotion @relation(fields: [promotionId], references: [id], onDelete: Cascade)
  service     Service   @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  @@unique([promotionId, serviceId])
  @@index([serviceId])
}

model ClientDiscount {
  id        String   @id @default(cuid())
  clientId  String   @unique
  percent   Int
  createdAt DateTime @default(now())
  client    Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
}

model EmailVerification {
  id        String   @id @default(cuid())
  email     String
  code      String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([email])
  @@index([expiresAt])
  @@index([used])
}

model BookingDraft {
  id           String    @id @default(cuid())
  serviceId    String
  masterId     String
  startAt      DateTime
  endAt        DateTime
  customerName String
  phone        String
  email        String
  birthDate    DateTime?
  referral     String?
  notes        String?
  /// Язык клиента при бронировании: "de", "ru", "en"
  locale       String?   @default("de")
  createdAt    DateTime  @default(now())

  @@index([serviceId])
  @@index([masterId])
  @@index([startAt, endAt])
}

model GoogleUser {
  id        String   @id @default(cuid())
  email     String   @unique
  googleId  String   @unique
  firstName String?
  lastName  String?
  picture   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([googleId])
  @@index([email])
}

model GoogleVerificationRequest {
  id            String   @id @default(cuid())
  email         String
  draftId       String
  state         String   @unique
  expiresAt     DateTime
  verified      Boolean  @default(false)
  appointmentId String?
  createdAt     DateTime @default(now())

  @@index([email, draftId])
  @@index([state])
  @@index([expiresAt])
  @@index([verified])
}

model GoogleQuickRegistration {
  id            String    @id @default(cuid())
  state         String    @unique
  serviceId     String
  masterId      String
  startAt       DateTime
  endAt         DateTime
  email         String?
  expiresAt     DateTime
  verified      Boolean   @default(false)
  appointmentId String?
  createdAt     DateTime  @default(now())
  birthDate     DateTime?
  customerName  String?
  /// Язык клиента при бронировании: "de", "ru", "en"
  locale        String?   @default("de")

  @@index([state])
  @@index([verified])
  @@index([expiresAt])
}

model SmsPhoneRegistration {
  id            String       @id @default(cuid())
  state         String       @unique
  phone         String
  pinCode       String
  pinExpiresAt  DateTime
  attempts      Int          @default(0)
  serviceId     String
  masterId      String
  startAt       DateTime
  endAt         DateTime
  customerName  String?
  email         String?
  birthDate     DateTime?
  verified      Boolean      @default(false)
  appointmentId String?      @unique
  /// Язык клиента при бронировании: "de", "ru", "en"
  locale        String?      @default("de")
  expiresAt     DateTime
  createdAt     DateTime     @default(now())
  appointment   Appointment? @relation(fields: [appointmentId], references: [id])
  master        Master       @relation(fields: [masterId], references: [id], onDelete: Cascade)
  service       Service      @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  @@index([phone])
  @@index([verified])
  @@index([expiresAt])
}

model TelegramVerification {
  id             String       @id @default(cuid())
  phone          String
  telegramUserId BigInt?
  code           String
  sessionId      String       @unique
  verified       Boolean      @default(false)
  serviceId      String
  masterId       String
  startAt        String
  endAt          String
  email          String?
  birthDate      DateTime?
  appointmentId  String?      @unique
  /// Язык клиента при бронировании: "de", "ru", "en"
  locale         String?      @default("de")
  createdAt      DateTime     @default(now())
  expiresAt      DateTime
  appointment    Appointment? @relation(fields: [appointmentId], references: [id])

  @@index([sessionId])
  @@index([phone])
  @@index([telegramUserId])
}

model TelegramUser {
  id             String   @id
  email          String?  @unique
  telegramUserId BigInt   @unique
  telegramChatId BigInt   @unique
  firstName      String?
  lastName       String?
  username       String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  phone          String   @unique

  @@index([telegramChatId])
  @@index([phone])
}

model TemporarySlotReservation {
  id        String   @id @default(cuid())
  masterId  String
  startAt   DateTime
  endAt     DateTime
  sessionId String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime

  @@index([masterId, startAt, endAt])
  @@index([expiresAt])
}

/// История изменений статуса заявок
model AppointmentStatusLog {
  id             String             @id @default(cuid())
  appointmentId  String
  status         AppointmentStatus
  previousStatus AppointmentStatus?
  changedAt      DateTime           @default(now())
  changedBy      String?
  reason         String?
  appointment    Appointment        @relation(fields: [appointmentId], references: [id], onDelete: Cascade)

  @@index([appointmentId])
  @@index([changedAt])
  @@map("appointment_status_logs")
}

enum ArticleType {
  NEWS
  PROMO
  ARTICLE
}

enum AppointmentStatus {
  PENDING
  CONFIRMED
  CANCELED
  DONE
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

enum Role {
  USER
  MASTER
  ADMIN
}

model AdminOTP {
  id           String    @id @default(cuid())
  code         String
  action       String
  resourceId   String
  resourceType String
  adminEmail   String
  expiresAt    DateTime
  verified     Boolean   @default(false)
  createdAt    DateTime  @default(now())
  usedAt       DateTime?

  @@index([code])
  @@index([adminEmail])
  @@index([expiresAt])
  @@map("admin_otp")
}


