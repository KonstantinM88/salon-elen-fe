{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "bot.ts",
    "../src/lib/telegram-crypto.ts",
    "../src/lib/otp-store.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}